@page
@model RecipeBook2.Web.Pages.Recipes.CreateModel

<h2 class="text-info">Create Recipe</h2>
<div class="border container" style="padding:30px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Recipe.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Recipe.Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Recipe.Description"></label>
            </div>
            <div class="col-6">
                <textarea asp-for="Recipe.Description" Description="form-control" type="text" text-wrap="normal"></textarea>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


