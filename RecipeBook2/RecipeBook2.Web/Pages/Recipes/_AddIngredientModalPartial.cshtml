@model AddIngredientViewModel
<!-- Modal -->
<div class="modal fade" id="add-ingredient" tabindex="-1" role="dialog" aria-labelledby="addIngredientLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addIngredientLabel">Add Ingredient</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="add-ingredient-form" asp-page-handler="AddIngredientModalPartial">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div class="form-group">
                        @Html.DisplayName("Ingredient: ")
                        @Html.HiddenFor(m => m.RecipeIngredient.RecipeId)
                        @Html.DropDownListFor(m => m.RecipeIngredient.IngredientId, new SelectList(Model.Ingredients, "Id", "Name"))
                        <span asp-validation-for="RecipeIngredient.IngredientId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        @Html.DisplayName("Amount: ")
                        @Html.TextBoxFor(m => m.RecipeIngredient.Amount, new { @class = "form-control", @type = "number", @min = "1" })
                        <span asp-validation-for="RecipeIngredient.Amount" class="text-danger"></span>
                    </div>
                </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" data-save="modal">Save</button>
                </div>
            </div>

        </div>
    </div>
</div>

