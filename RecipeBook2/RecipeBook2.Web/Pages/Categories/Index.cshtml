@page "{id = null}"
@model Categories.IndexModel
@{
    ViewData["Title"] = "Categories List";
}

<div class="container row p-0 m-0">
    <div class="col-9">
        <h1><a asp-page="Index">Categories List</a></h1>
    </div>
    <div class="col-3">
        <a asp-page="Create" asp-route-parentId="@ViewData["Id"]" class="btn btn-info form-control text-white">New Category</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Categories.Count > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th colspan="2">
                            @Html.DisplayNameFor(m => m.Categories.First().Name)
                        </th>
                    </tr>
                    @foreach (var category in Model.Categories)
                    {
                        <tr>
                            <td>
                               <a asp-page="Index" asp-route-id="@category.Id" class="text-info">@category.Name</a>
                            </td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@category.Id" onclick="return confirm('Are you sure you want to delete category?')" class="btn btn-danger btn-sm">Delete</button>
                                <a asp-page="Edit" asp-route-id="@category.Id" class="btn btn-success btn-sm text-white">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No categories available.</p>
            }
        </form>
    </div>
</div>
