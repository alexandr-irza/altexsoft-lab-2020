@page
@model Ingredients.EditModel
@{
    ViewData["Title"] = "Edit Ingredient";
}

<h2 class="text-info">Edit Ingredient</h2>
<div class="border container" style="padding:30px">
    <form method="post">
        <input type="hidden" asp-for="Ingredient.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                @Html.DisplayNameFor(m => m.Ingredient.Name)
            </div>
            <div class="col-6">
                @Html.TextBoxFor(m => m.Ingredient.Name, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}